<div id="index-root">
	<div class="panel panel-primary">
		<div class="panel-heading text-center">
			{{title}}
		</div>
		<div class="panel-body">
		   Utilizando o sequelize e o sequelize-cli para verificar as opções de criar, atualizar e popular o banco de dados
		</div>
	</div>
	
	<!-- Form para adicionar equipe -->
	<form>
		<div class="form-row">
			<div class="form-group col">
				<label for="team-name">Nome</label>
				<input type="text" name="team-name" id="team-name" class="form-control">
			</div>
			<div class="form-group col">
				<a class="btn btn-primary btn-block" href="javascript:insertTeam()">Nova Equipe</a>
			</div>
		</div>
	</form>
	<!-- Lista de Equipes -->
	<ul id="list-teams" class="list-group"></ul>

	<!-- Lista de usuarios -->
	<table id="table-users" class="table table-striped">
		<thead>
			<tr>
				<th>Nome</th>
				<th>Email</th>
			</tr>
		</thead>
		<tbody></tbody>
	</table>

	<!-- Detalhes do usuario -->
	<div id="panel-user" class="panel panel-primary">
		<div class="panel-body"></div>
	</div>
</div>
<script src="/js/index.js"></script>